<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="stdout" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/stdout.out" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c  - %m%n" />
		</layout>
	</appender>
	
	<appender name="ugcout" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/ugc.out" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c  - %m%n" />
		</layout>
	</appender>
	
	
	<appender name="statics" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/statics.out"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c  - %m%n" />
		</layout>
	</appender> 
	
	<!--
	<appender name="performanceLog" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p  - %m%n" />
		</layout>
	</appender>
	-->
	 
	<appender name="performanceLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/MethodPerformance.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="500log" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/500logs/500.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p  %c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">     
  			<param name="LevelMin" value="error" />
            <param name="AcceptOnMatch" value="true" />   
		</filter>
	</appender>
	 
	<appender name="iospushLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/iospush.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p  %c- %m%n" />
		</layout>
	</appender>
	
	<appender name="snsApiLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/snsApiLog.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p  %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="snsApiUtilLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/snsApiUtilLog.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="snsHttpLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/snsHttpLog.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p  %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="log4UpdateFriends" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/log4UpdateFriends.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="log4AsynchronizeQueue" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/soundsns_logs/log4AsynchronizeQueue.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd-HH:mm:ss,SSS} %5p %c - %m%n" />
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="com.renren.intl">
		<level value="debug" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>
	
	<logger name="com.renren.intl.soundsns.cache.client.RedisCacheClient" additivity="false">
		<level value="error" />
		<appender-ref ref="stdout" />
	</logger>
	
	<logger name="com.renren.intl.soundsns.utils.MethodTimeAdvice" additivity="false">
		<level value="debug" />
		<appender-ref ref="performanceLog" />
	</logger>
	<logger name="com.renren.intl.soundsns.service" additivity="false">
		<level value="debug" />
		<appender-ref ref="stdout" />
	</logger>
	<logger name="com.renren.intl.soundsns.service.impl.SNSServiceImpl" additivity="false">
		<level value="info" />
		<appender-ref ref="snsApiLog" />
	</logger>
	<logger name="com.renren.intl.soundsns.service.impl.SNSTableService" additivity="false">
		<level value="info" />
		<appender-ref ref="snsApiLog" />
	</logger>
	<logger name="com.renren.intl.soundsns.service.impl.DBSNSSetServiceImpl" additivity="false">
		<level value="info" />
		<appender-ref ref="snsApiLog" />
	</logger>
	<logger name="com.renren.intl.soundsns.service.impl.DBSNSGetServiceImpl" additivity="false">
		<level value="info" />
		<appender-ref ref="snsApiLog" />
	</logger>
	<logger name="com.renren.intl.soundsns.service.impl.GooglePlushService" additivity="false">
		<level value="info" />
		<appender-ref ref="snsApiLog" />
	</logger>
	<logger name="com.renren.intl.soundsns.sns.dbutil.SnsApiCallUtil" additivity="false">
		<level value="info" />
		<appender-ref ref="snsApiUtilLog" />
	</logger>
	
	<logger name="com.renren.intl.soundsns.sns.dbutil.SNSTool" additivity="false">
		<level value="info" />
		<appender-ref ref="snsApiUtilLog" />
	</logger>
	
	<logger name="com.renren.intl.soundsns.sns.dbutil.AsynchronizeUpdateFriends" additivity="false">
		<level value="info" />
		<appender-ref ref="statics" />
	</logger>
	<logger name="com.renren.intl.soundsns.sns.dbutil.LoggerForUpdateFriends" additivity="false">
		<level value="info" />
		<appender-ref ref="log4UpdateFriends" />
	</logger>
	<logger name="com.renren.intl.soundsns.message.service.impl.NewsServiceImpl" additivity="false">
		<level value="info" />
		<appender-ref ref="statics" />
	</logger>
	<logger name="newsinfo" additivity="false">
		<level value="info" />
		<appender-ref ref="stdout" />
	</logger>
	<logger name="com.renren.intl.soundsns.util.ExecutorFactory" additivity="false">
		<level value="info" />
		<appender-ref ref="log4AsynchronizeQueue" />
	</logger>
	
	<logger name="com.renren.intl.soundsns.service.impl.UGCServiceImpl">
		<level value="info" />
		<appender-ref ref="ugcout"/>
	</logger>
	
	<logger name="com.amazonaws.services.s3.AmazonS3Client">
		<level value="error" />	
	</logger>	

    <logger name="javapns">
		<level value="info" />
		<appender-ref ref="iospushLog" />
	</logger>
	
	<!-- Root Logger -->
	<root>
		<level value="info" />
		<appender-ref ref="500log" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
