	<!-- Application Loggers -->
	<logger name="com.tg">
		<level value="info" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework">
		<level value="info" />
	</logger>
	
	
	<root>
		<level value="info" />
		<appender-ref ref="stdout" />
	</root>
	
</log4j:configuration>
